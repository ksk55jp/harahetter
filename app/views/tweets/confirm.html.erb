<h2>食べ物に関する投稿を確認する</h2>
<%= form_for(@tweet) do |f| %>
	<% if @tweet.errors.any? %>
	  <h2><%= @tweet.errors.count %>件のエラーがあります</h2>
	  <div id="error_explanation">
	    <ul>
	      <% @tweet.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>
  <%= f.label :content, class:'form-control' %>
  <%= f.text_field :content, class:'form-control' %>
  <br>
  <%= f.submit '投稿', class: 'btn btn-success btn-block'%>
<% end %>
<%= form_for(@tweet, url:new_tweet_path, method:'get') do |f| %>
  <%= f.hidden_field :content %>
  <%= f.submit '戻る', name: 'back', class: 'btn btn-danger btn-block' %>
<% end %>
