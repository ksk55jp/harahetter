<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
	<% if @tweet.errors.any? %>
	  <h2><%= @tweet.errors.count %>件のエラーがあります</h2>
	  <div id="error_explanation">
	    <ul>
	      <% @tweet.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>
  <%= f.label :content , class:'form-control' %>
  <%= f.text_field :content, class: 'form-control textarea' %>
  <br>
  <%= f.submit class:'btn btn-success btn-block' %>
<% end %>
<br>

<%= link_to "一覧画面に戻る", tweets_path , class:'btn btn-danger btn-block'%>
