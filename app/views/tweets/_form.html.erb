<%= form_for(@tweet, url: choose_new_or_edit) do |f| %>
	<% if @tweet.errors.any? %>
	  <h2><%= @tweet.errors.count %>件のエラーがあります</h2>
	  <div id="error_explanation">
	    <ul>
	      <% @tweet.errors.full_messages.each do |msg| %>
	        <li><%= msg %></li>
	      <% end %>
	    </ul>
	  </div>
	<% end %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit %>
<% end %>
<%= link_to "一覧画面に戻る", tweets_path %>
